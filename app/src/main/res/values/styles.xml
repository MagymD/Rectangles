<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/strokeColor</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/foregroundColor</item>
    </style>

    <style name="ImageIcon" parent="AppTheme">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">@drawable/tab_ripple</item>
    </style>
</resources>